<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Marvel.App.Screens.Favorits"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Mavel.ViewModels.Screens;assembly=Mavel.ViewModels"
    Title="{Binding Title}"
    x:DataType="vm:FavoritsViewModel"
    Background="{StaticResource Primary}">
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Meus favoritos da marvel!"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>